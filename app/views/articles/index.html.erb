<div class="d-flex justify-content-between m-3 p-0">
  <div class="m-0">
    <h1 class="p-0">Articles</h1>
  </div>
  <%= link_to "New Article", new_article_path, class: "btn btn-primary pt-2" %>
</div>

<div class="row justify-content-center">
  <% @articles.each do |article| %>
    <div class="col-md-9">
      <div class="card bg-light mb-3">
        <h2 class="card-header"><%= link_to article.title, article_path(article) %></h2>
        <p class="card-text m-4"><%= article.content %></p>
      </div>
    </div>
  <% end %>
</div>
