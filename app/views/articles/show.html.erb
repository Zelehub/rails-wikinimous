<div class="row justify-content-center">
  <div class="col-md-9">
    <div class="card bg-light mb-3">
    <h2 class="card-header text-center"><%= @article.title %></h2>
    <p class="card-text m-4"><%= @article.content %></p>
    <div class="row justify-content-center">
      <%= link_to "Edit", edit_article_path, class: "btn btn-warning col-4 m-3" %>
      <%= link_to "Delete", article_path, class: "btn btn-danger col-4 m-3",
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </div>
    </div>
      <%= link_to "Go back", articles_path, class: "btn btn-primary col-4" %>
  </div>
</div>
